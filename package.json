{
  "name": "stationhead-auto-streamer",
  "version": "0.1.0",
  "description": "Stationhead配信の自動化システム",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:go-on-air": "ts-node scripts/test-go-on-air.ts",
    "test:playlist-only": "ts-node scripts/test-playlist-only.ts",
    "test:system-chrome": "ts-node scripts/test-system-chrome.ts",
    "clean": "rm -rf screenshots/*.png data/*.json && echo 'Test artifacts cleaned'",
    "clean:all": "npm run clean && rm -rf screenshots/archive data/archive scripts/archive && echo 'All artifacts and archives cleaned'",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,md}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,json,md}'",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "stationhead",
    "automation",
    "streaming",
    "playwright",
    "scheduler"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@slack/webhook": "^7.0.2",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3",
    "playwright": "^1.40.1",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
